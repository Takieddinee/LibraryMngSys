@model  IEnumerable<Library.Models.ViewModels.AssetIndexModel>

<div id="assets">
    <h3>Library Catalog</h3>
    <div id="assetTable">
        <table class="table table-condensed" id="catalogTable" >
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author or Director</th>
                    <th>Dewey Call Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var asset in Model.AsEnumerable())
                {
                <tr id="assetRow">
                    <td>
                        <a asp-route-id="@asset.Id" asp-controller="Catalog" asp-action="Detail">
                            <img src="@asset.ImageUrl" class="imageCell" />
                        </a>
                    </td>
                    <td>@asset.Title</td>
                    <td>@asset.AuthorOrDirector</td>
                    <td>@asset.DeweyCallNumber</td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>